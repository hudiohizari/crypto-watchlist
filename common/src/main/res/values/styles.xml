<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- Text input style. -->
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>

        <!-- Card style. -->
        <item name="cardViewStyle">@style/CardStyle</item>
        <item name="materialCardViewStyle">@style/CardStyle</item>
    </style>

    <!-- TextInputLayout. -->
    <style name="TextInputLayoutStyle"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:background">@color/background</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
    </style>

    <!-- Button. -->
    <style name="ButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textColor">@color/button_text_selector</item>
        <item name="android:backgroundTint">@color/button_selector</item>
        <item name="rippleColor">@color/background</item>
    </style>

    <style name="ButtonThemeOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textColor">@color/button_outline_text_selector</item>
        <item name="strokeColor">@color/button_outline_stroke_selector</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    <style name="ButtonThemeOutlineGray" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textColor">@color/button_gray_outline_text_selector</item>
        <item name="strokeColor">@color/button_gray_outline_stroke_selector</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <!-- Card. -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

</resources>
